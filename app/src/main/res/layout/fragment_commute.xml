<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".commuteFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#84bc32"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:text="Commute"/>

   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Pooling"
       android:textColor="#ffff"
       android:layout_margin="10dp"
        android:background="@drawable/greenbutton"
       android:layout_gravity="center"
       android:id="@+id/pooling"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public trans"
        android:textColor="#ffff"
        android:layout_margin="10dp"
        android:background="@drawable/greenbutton"
        android:layout_gravity="center"
        android:id="@+id/publictrans"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Live Tracking"
            android:textColor="#ffff"
            android:layout_margin="10dp"
            android:background="@drawable/greenbutton"
            android:layout_gravity="center"
            android:id="@+id/livetrack"/>


    </LinearLayout>
</FrameLayout>