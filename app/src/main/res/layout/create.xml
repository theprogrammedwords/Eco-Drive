<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:background="#ffff"
    android:layout_height="match_parent">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:text="Circles"
    android:paddingBottom="10dp"
    android:layout_weight="1"
    android:background="#8bc34a"
    android:paddingTop="10dp"
    android:textColor="#FFFFFF"
    android:gravity="left"
    android:textSize="20sp"
    />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_weight="0.5"
        android:id="@+id/rel1_imageview"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Main Image"
            android:padding="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/person"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:background="@drawable/editor_states"
            android:clickable="true"
            android:contentDescription="image"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/editimage"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginBottom="10dp"
        android:text="Circle Name"
        android:textSize="20sp"/>

    <EditText
        android:background="@drawable/backgroundshade"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="15dp"
        android:id="@+id/circleName"
        android:hint="Enter circle name"
        android:inputType="text"
        android:layout_weight="2"/>


    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:hint="City Name"
    android:textSize="20sp"
    android:layout_weight="1.5"/>
    <EditText
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter city name"
        android:paddingLeft="15dp"
        android:id="@+id/cityName"
        android:background="@drawable/backgroundshade"
        android:layout_marginTop="10dp"
        android:inputType="text|textMultiLine"
        android:layout_weight="2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:layout_weight="0.5"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:id="@+id/invite"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:paddingRight="20dp"
            android:background="@drawable/greenbutton" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:layout_weight="0.5"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:id="@+id/share"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:paddingRight="20dp"
            android:background="@drawable/greenbutton" />


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Circle"
        android:id="@+id/create_Circle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:paddingRight="20dp"
        android:background="@drawable/greenbutton" />
</LinearLayout>
</LinearLayout>