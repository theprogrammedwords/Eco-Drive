<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:text=" Register"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:typeface="sans"
        android:layout_marginBottom="10dp"/>



    <RelativeLayout
        android:layout_weight="0.4"
        android:layout_width="200dp"
        android:layout_margin="10dp"
        android:layout_height="160dp"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/backgroundshade"
            android:contentDescription="Image Border"
            android:padding="0dp"/>

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Main Image"
            android:padding="1dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/editor_states"
            android:clickable="true"
            android:contentDescription="image"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/editimage" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#ffff"
        android:paddingLeft="5dp"
        android:layout_weight="0.5"
        android:text=" What should we call you ?"
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview"
        android:ems="8"
        android:paddingLeft="16dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:hint="  my nick name"
        android:textSize="15sp"
        android:typeface="sans"
        app:fontFamily="sans-serif"
        android:layout_marginBottom="10dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/genderRg">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=" I am  "
            android:textSize="18sp"
            android:layout_marginRight="15dp"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="15sp"
            android:id="@+id/male"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="15sp"
            android:id="@+id/female"/>
    </RadioGroup>

    <TextView
        android:id="@+id/primaryEmailText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#ffff"
        android:text=" Where can we reach you ?"
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="sans-serif"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/phoneno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview"
        android:ems="14"
        android:hint="  my phone number"
        android:textSize="15sp"
        android:typeface="sans"
        android:paddingLeft="16dp"
        app:fontFamily="sans-serif"
        android:layout_weight="0.5"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:inputType="phone"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0.6"
        android:background="@drawable/greenbutton"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:typeface="sans"
        app:fontFamily="sans-serif"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"/>


</LinearLayout>